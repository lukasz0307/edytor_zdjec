<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/foto"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"

        />
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_filter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:id="@+id/text"
        android:text="Przezroczystość"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:max="10"
        android:min="0"
        android:id="@+id/transparency"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obrót"
        android:layout_below="@+id/transparency"
        android:layout_centerHorizontal="true"
        android:id="@+id/text2"
        />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/rotate"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text2"
        android:min="0"
        android:max="360"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rotate"
        android:layout_centerHorizontal="true"
        android:onClick="left_rotation"
        android:id="@+id/rotate_left"
        android:background="@drawable/ic_baseline_rotate_90_degrees_ccw_24"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rotate"
        android:layout_toRightOf="@+id/rotate_left"
        android:onClick="right_rotation"
        android:id="@+id/rotate_right"
        android:background="@drawable/ic_baseline_rotate_90_degrees_cw_24"
        />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rotate_left"
        android:layout_centerHorizontal="true"
        android:min="0"
        android:max="255"
        android:id="@+id/seekbar_r"
        android:paddingTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/seekbar_r"
        android:text="R"
        android:layout_below="@+id/rotate_left"
        android:textSize="20dp"
        />

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_r"
        android:layout_centerHorizontal="true"
        android:min="0"
        android:max="255"
        android:id="@+id/seekbar_g"
        android:paddingTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/seekbar_g"
        android:text="G"
        android:layout_below="@+id/seekbar_r"
        android:textSize="20dp"
        />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_g"
        android:layout_centerHorizontal="true"
        android:min="0"
        android:max="255"
        android:id="@+id/seekbar_b"
        android:paddingTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/seekbar_b"
        android:text="B"
        android:layout_below="@+id/seekbar_g"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turn_off"
        android:text="Łukasz Jankowiak 4PR"
        android:textSize="20dp"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_b"
        android:id="@+id/turn_off"
        android:text="Wyłącz filtr koloru"
        android:onClick="turn_off"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>